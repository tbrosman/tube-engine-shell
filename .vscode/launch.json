{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "TestRunner",
            "request": "launch",
            "type": "hl",
            "hxml": "build-test.hxml",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "BuildTest"
        },
        {
            "name": "Example",
            "request": "launch",
            "type": "hl",
            "hxml": "build-example-hl.hxml",
            "cwd": "${workspaceRoot}/app/example",
            "preLaunchTask": "BuildExample"
        },
        {
            "name": "Example JS",
            "type": "chrome",
            "request": "launch",
            "url": "${workspaceFolder}/app/example/bin/index.html",
            "webRoot": "${workspaceFolder}/app/example/bin",
            "preLaunchTask": "BuildExampleJS"
        }
    ]
}